@model List<Cheeses.Models.CheeseCategory>

@{
    ViewData["Title"] = "index";
}

<h1>index</h1>

@if (Model.Count == 0)
{
    <p>No categories yet</p>
}
else
{
    <ul>
        @foreach (CheeseCategory category in Model)
        {
            <li><a asp-controller="Cheese" asp-action="Category" asp-route-id="@category.ID">@category.Name</a></li>
        }
    </ul>
}

<p><a asp-controller="Category" asp-action="Add">Add category</a></p>