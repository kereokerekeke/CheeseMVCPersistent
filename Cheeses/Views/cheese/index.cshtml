@model List<Cheeses.Models.Cheese>

@{
    ViewData["Title"] = "index";

}

<h1>index</h1>

@if (Model.Count == 0)
{
    <p>No cheeses yet</p>
}
else
{

    <form method="post">

        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Raiting</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Cheese cheese in Model)
                {
                <tr>
                    <td><input type="checkbox" name="cheeses" value="@cheese.ID" /></td>
                    <td>@cheese.Name</td>
                    <td>@cheese.Description</td>
                    <td>@cheese.Category.Name</td>
                    <td>@cheese.Raiting</td>
                    <td><a asp-controller="Cheese" asp-action="Edit" asp-route-cheeseId="@cheese.ID">edit</a></td>
                </tr>
                }
            </tbody>
            </table>

        @if (Model.Count != 0)
        {
            <input type="submit" value="remove cheese" />
        }

    </form>

}
